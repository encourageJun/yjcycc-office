<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.yjcycc.office.mapper.RoleAuthorityMapper">
	
	<!-- table name -->
	<sql id="tableName">
		yjcycc_role_authority
	</sql>
	
	<!-- select field -->
	<sql id="selectField">
		id,
		role_id AS roleId,
		authority
	</sql>
	
	<!-- add field -->
	<sql id="addField">
		id,
		role_id,
		authority
	</sql>
	
	<!-- field values -->
	<sql id="fieldValue">
		#{id},
		#{roleId},
		#{authority}
	</sql>
	
	<!-- getByEntity -->
	<select id="get" resultType="roleAuthority" parameterType="roleAuthority">
		SELECT 
		<include refid="selectField"></include>
		FROM 
		<include refid="tableName"></include>
		WHERE 1 = 1
		<if test="id != null and id != ''">
			AND id = #{id}
		</if>
		<if test="roleId != null and roleId != ''">
			AND role_id = #{roleId}
		</if>
		limit 1
	</select>
	
	<!-- getByMap -->
	<select id="getByMap" resultType="roleAuthority" parameterType="map">
		SELECT 
		<include refid="selectField"></include>
		FROM 
		<include refid="tableName"></include>
		WHERE 1 = 1
		<if test="id != null and id != ''">
			AND id = #{id}
		</if>
		<if test="roleId != null and roleId != ''">
			AND role_id = #{roleId}
		</if>
		limit 1
	</select>
	
	<!-- 分页, 使用了pagehelper插件 -->
	<select id="findPager" resultType="roleAuthority" parameterType="roleAuthority">
		SELECT 
		<include refid="selectField"></include>
		FROM 
		<include refid="tableName"></include>
        WHERE 1 = 1
        	<!-- AND id = #{id} -->
        ORDER BY role_id asc
	</select>
	
	<!-- 分页, 使用了pagehelper插件 -->
	<select id="findPagerByMap" resultType="roleAuthority" parameterType="map">
		SELECT 
		<include refid="selectField"></include>
		FROM 
		<include refid="tableName"></include>
        WHERE 1 = 1
        	<!-- AND id = #{id} -->
        ORDER BY role_id ASC
	</select>
	
	<!-- 获取所有权限 -->
	<select id="findAllList" resultType="roleAuthority" parameterType="map">
		SELECT 
		<include refid="selectField"></include>
		FROM 
		<include refid="tableName"></include>
        WHERE 1 = 1
        <if test="roleId != null">
        	AND role_id = #{roleId}
        </if>
        ORDER BY id ASC
	</select>
	
	<!-- 条件获取权限 -->
	<select id="findAuthorities" resultType="String" parameterType="map">
		SELECT 
			authority
		FROM 
		<include refid="tableName"></include>
        WHERE 1 = 1
        <if test="roleId != null">
        	AND role_id = #{roleId}
        </if>
        <if test="roles != null and roles != ''">
        	AND role_id in (${roles})
        </if>
        ORDER BY id ASC
	</select>
	
	<!-- insert -->
	<insert id="insert" parameterType="roleAuthority">
		INSERT INTO 
		<include refid="tableName"></include>
		(
		<include refid="addField"></include>
		) VALUES (
		<include refid="fieldValue"></include>
		)
	</insert>
	
	<!-- updateByEntity -->
	<update id="update" parameterType="roleAuthority">
		UPDATE <include refid="tableName"></include>
		SET
			authority = #{authority}
		WHERE
			id = #{id}
	</update>
	
	<!-- updateByMap -->
	<update id="updateByMap" parameterType="map">
		UPDATE <include refid="tableName"></include>
		SET
			authority = #{authority}
		WHERE
			id = #{id}
	</update>
	
	<!-- delete -->
	<delete id="delete" parameterType="roleAuthority">
		DELETE FROM <include refid="tableName"></include>
		WHERE
			id = #{id}
	</delete>
	
	<!-- batch delete -->
	<delete id="batchDelete" parameterType="String">
		DELETE FROM <include refid="tableName"></include>
		WHERE
			id in (${ids})
	</delete>
	
</mapper>